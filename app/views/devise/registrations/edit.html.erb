<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center login-title">
      <% if current_user.valid? %>
        Muokkaa profiilia
      <% else %>
        Viimeistele rekisteröitymisesi
      <% end %>
    </h1>
    <div class="account-wall">
      <%= devise_error_messages! %>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, :class => "form-edit-registration"}) do |f| %>

          <% if f.object.image? %>
              <%= image_tag f.object.image_url(:display), class: "profile-img" %>
          <% else %>
              <!-- placeholder -->
          <% end %>

          <div class="form-group">
            <%= f.label :image, class: "control-label" %>
            <%= f.hidden_field :image_cache, class: "form-control" %>
            <%= f.file_field :image, class: "form-control" %>
            <% if f.object.image? %>
                <%= f.label :remove_image, class: "control-label" %>
                <%= f.check_box :remove_image, class: "form-control" %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :email, class: "control-label" %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :first_name, class: "control-label" %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :last_name, class: "control-label" %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>

          <% unless resource.valid? %>
            <div class="form-group">
              <%= f.label :personal_code, class: "control-label" %>
              <%= f.text_field :personal_code, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.check_box :passport_number %>
              <%= f.label :passport_number, class: "control-label" %>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :address, class: "control-label" %>
            <%= f.text_field :address, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :zip_code, class: "control-label" %>
            <%= f.text_field :zip_code, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :city, class: "control-label" %>
            <%= f.text_field :city, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :phone_number, class: "control-label" %>
            <%= f.text_field :phone_number, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description, class: "control-label" %>
            <%= f.text_area :description, :cols => "30", :rows => "5", class: "form-control" %>
            <i>(max. 2000 merkkiä)</i>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Odotetaan vahvistusta seuraavalle: <%= resource.unconfirmed_email %></div>
          <% end %>

          <% unless resource.is_social? %>
          <div class="form-group">
            <%= f.label :password, class: "control-label" %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <i>(jätä tyhjäksi jos et halua vaihtaa salasanaasi)</i>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "control-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :current_password, class: "control-label" %>
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            <i>(tarvitsemme nykyisen salasanasi muutosten vahvistamiseksi)</i>
          </div>
          <% end %>

          <div class="form-group">
            <%= f.submit "Päivitä", class: "btn btn-success" %>
            <%= link_to "Peruuta", user_path(resource_name), class: "btn" %>
          </div>

      <% end %>
    </div>

    <h3>Poista tilini</h3>
    <h5>Haluatko lopettaa palvelun käytön?</h5>

    <%= button_to "Poista tilini", registration_path(resource_name), data: { confirm: "Oletko varma?" },
                  method: :delete, :class => 'btn-mini btn-danger btn' if current_user %>
  </div>
</div>

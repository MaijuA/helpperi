          <!--</div>-->

          <!--<div class="form-group">-->
            <!--<%= f.label :personal_code, class: "control-label" %>-->
            <!--<%= f.text_field :personal_code, class: "form-control" %>-->
          <!--</div>-->

          <!--<div class="form-group">-->
            <!--<%= f.check_box :passport_number %>-->
            <!--<%= f.label :passport_number, class: "control-label" %>-->
          <!--</div>-->

          <!--<div class="form-group">-->
            <!--<%= f.label :phone_number, class: "control-label" %>-->
            <!--<%= f.text_field :phone_number, class: "form-control" %>-->
          <!--</div>-->

          <!--<div class="form-group">-->
            <!--<%= f.label :address, class: "control-label" %>-->
            <!--<%= f.text_field :address, class: "form-control" %>-->
          <!--</div>-->

          <!--<div class="form-group">-->
            <!--<%= f.label :zip_code, class: "control-label" %>-->
            <!--<%= f.text_field :zip_code, class: "form-control" %>-->
          <!--</div>-->

          <!--<div class="form-group">-->
            <!--<%= f.label :city, class: "control-label" %>-->
            <!--<%= f.text_field :city, class: "form-control" %>-->
          <!--</div>-->

          <div class="form-group">
            <%= f.label :password, class: "control-label" %>
            <% if @minimum_password_length %>
                <em>(vähintään <%= @minimum_password_length %> merkkiä)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "control-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <em>Rekisteröitymällä hyväksyt palvelun <%= link_to 'käyttöehdot', info_tos_path %>.</em>
          </div>

          <div class="form-group">
            <%= f.submit "Rekisteröidy", class: "black-button" %>
            <!--%= link_to "Peruuta", cancel_user_registration_path, class: "white-button" %-->
          </div>
      <% end %>
      <hr>
      <div class="shared-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

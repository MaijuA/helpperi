<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center login-title">Unohditko salasanasi?</h1>
    <div class="account-wall">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "lomake" }) do |f| %>
          <%= devise_error_messages! %>
          <p>Saat salasanan uusimisohjeet sähköpostiisi syöttämällä sähköpostiosoitteesi alla olevaan kenttään.</p>

          <div class="form-group">
            <%= f.label :email %><br>
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.submit "Lähetä", class: "black-button" %>
          </div><br><br>
          <%= render "devise/shared/links" %>
      <% end %>

    </div>
  </div>
</div>


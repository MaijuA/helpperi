<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center login-title">Käyttäjän <%= @user.first_name %> arvioinnit (<%= @user.ratings.count %>)</h1>
    <div class="account-wall">
      <div class="padding" >
      <% if @user.ratings.empty? %>
      Käyttäjällä ei ole vielä arviointeja.
          <% end %>
      </div>
      <table class="table table-striped">
        <thead>
        <tr>
          <th class="col-md-2"></th>
          <th class="col-md-2"></th>
          <th class="col-md-2"></th>
        </tr>
        </thead>

        <tbody class="form-group">
        <% @user.ratings.each do |review| %>
            <tr>
              <td>
                <%= review.review %>
              </td>
              <td>
                <ul style="list-style: none; padding-left: 0;">
                  <% (1..3).each do |i| %>
                      <% if i <= review.score %>
                          <li class="on"></li>
                      <% else %>
                          <li class="rating_star"></li>
                      <% end %>
                  <% end %>
                </ul>
              </td>
              <td>
                <%= link_to "#{review.post.title}", post_path(review.post) unless review.post.nil?  %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
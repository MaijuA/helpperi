            <% if post.ratings.where(reviewer_id:post.performer.id).count > 0 %>
            Annoit arvion:
                  <% (1..5).each do |i| %>
                      <% if i <= post.ratings.where(reviewer_id:post.performer.id).first.score %>
                          <p class="on"></p>
                      <% else %>
                          <p class="rating_star"></p>
                      <% end %>
                  <% end %>
          <% else %>
              <%= link_to 'Arvioi ilmoittaja', user_review_path(:post_id => post.id) %>
          <% end %>
              </p>
        </div>
        </div>
        </td>

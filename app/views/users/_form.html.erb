<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :'käyttäjänimi' %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :'salasana' %><br>
    <%= f.password_field :password %>
  </div>
  <% if current_user.nil? %>
    <div class="actions">
      <%= f.submit 'Rekisteröi käyttäjä' %>
    </div>
  <% else %>
    <div class="actions">
      <%= f.submit 'Tallenna muutokset' %>
    </div>
  <% end %>
<% end %>

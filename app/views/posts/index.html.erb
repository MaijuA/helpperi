<h1>Ilmoitukset</h1>

<table>
  <thead>
    <tr>
      <th>Otsikko</th>
      <th>Kuvaus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Näytä ilmoitus', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'Uusi ilmoitus', new_post_path %>
<% end %>

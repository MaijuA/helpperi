<h1>Ilmoitukset</h1><br>

<h5><b>Etsitään helpperiä</b></h5>
<table class="table-striped">
  <tbody class="form-group">
  <thead>
  <tr>
    <th class="col-md-1"></th>
    <th class="col-md-2"></th>
    <th class="col-md-1"></th>
    <th class="col-md-1"></th>
  </tr>
  </thead>
  <% @posts_buying.each do |post| %>

      <tr>
        <td ><%= image_tag post.image_url(:display), width: 100, align: 'left' %></td>
        <td>
          <p><%= link_to truncate(post.title, :length => 30), post %></p>
          <p>
            <% post.categories.each do |category| %>
                <span class="category-badge"><%= "#{category.name}" %></span>
            <% end %>
          </p>
        </td>
        <td><% if post.price %>
              <%= post.price %> €
          <% end %>
        </td>
        <td>[tähdet]</td>
      </tr>
  <% end %>
  </tbody>
</table>


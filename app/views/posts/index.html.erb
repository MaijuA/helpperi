<h1>Ilmoitukset</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-md-2">Otsikko</th>
      <th class="col-md-2">Kuvaus</th>
      <th class="col-md-1">Hinta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= truncate(post.title, :length => 30) %></td>
        <td><%= truncate(post.description, :length => 30) %></td>
        <td><%= post.price %></td>
        <td><%= link_to 'Näytä ilmoitus', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Uusi ilmoitus', new_post_path if current_user %>

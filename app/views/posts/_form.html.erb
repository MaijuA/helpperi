<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>
          <% if @post.errors.count == 1 %>
            virhe
          <% else %>
            virhettä
          <% end %>
            esti tallentamasta tämän ilmoituksen:
      </h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :cols => "40", :rows => "5" %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div><br>
  <% if @edit %>
    <div class="actions">
      <%= f.submit 'Päivitä', class:"btn btn-success" %>
      <%= f.submit 'Peruuta', class:"btn" %>
    </div>
  <% else %>
    <div class="actions">
      <%= f.submit 'Luo ilmoitus', class:"btn btn-success" %>
      <%= link_to "Peruuta", posts_path, class:"btn"%>
    </div>
  <% end %>
<% end %>

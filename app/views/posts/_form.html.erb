<%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= @post.errors.count %>
            <% if @post.errors.count == 1 %>
                virhe
            <% else %>
                virhettä
            <% end %>
            esti tallentamasta tämän ilmoituksen:
          </h2>

          <ul>
            <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>

    <div class="radio">
      <label><input type="radio" name="optradio">Haluan Helpperiksi</label>
    </div>
    <div class="radio">
      <label><input type="radio" name="optradio">Etsin Helpperiä</label>
    </div>
    <br>
    <div class="form-group">
      <label for="sel1">Kategoria:</label>
      <i>(max. 2000 merkkiä)</i>
      <select class="form-control" id="sel1">
        <option>Kategoria 1</option>
        <option>Kategoria 2</option>
        <option>Kategoria 3</option>
        <option>Kategoria 4</option>
      </select>
    </div>
    <br>
    <div class="field">
      <%= f.label :price %><br>
      <%= f.number_field :price %>
    </div>

    <br>
    <div class="form-group">
      <%= f.label :description, class: "control-label" %>
      <br>
      <i>(max. 2000 merkkiä)</i>
      <br>
      <%= f.text_area :description, :cols => "30", :rows => "5" %>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :address, class: "control-label" %>
      <= f.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :zip_code, class: "control-label" %>
      <= f.text_field :zip_code, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :city, class: "control-label" %>
      <= f.text_field :city, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :radius %><br>
      <= f.number_field :radius %>
    </div>

    <br>
    <div class="field">
      <%= f.label :ending_date %><br>
      <= f.datetime_select :ending_date %>
    </div>
    <br>

    <% if @edit %>
        <div class="actions">
          <%= f.submit 'Muokkaa ilmoitusta' %>
        </div>
    <% else %>
        <br>
        <div class="actions">
          <%= f.submit 'Luo ilmoitus', class:"btn btn-success" %>
          <%= link_to "Peruuta", user_path(current_user), class:"btn"%>
        </div>
    <% end %>
<% end %>

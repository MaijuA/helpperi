    </tr>
    </thead>

    <tbody>
    <% @conversations.each do |conversation| %>

        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
            <% if conversation.sender_id == current_user.id %>
                <% recipient = User.find(conversation.recipient_id) %>
            <% else %>
                <% recipient = User.find(conversation.sender_id) %>
            <% end %>
            <tr>

              <td>
                <%= link_to recipient.first_name, user_path(recipient), class: "linkit" %>
                  <%= render 'layouts/stars', :user => recipient %><br>

              </td>
              <td>
                <% if conversation.post_id %>
                    <%= link_to Post.find(conversation.post_id).title, conversation_messages_path(conversation), class: "linkit" %>
                <% end %>
              </td>
              <td>
                <% if Conversation.where(id:conversation.id).user_messages(current_user.id).unread_by(current_user).count > 0 %>
                    <%= link_to 'Uusia viestejÃ¤', conversation_messages_path(conversation), class: "linkit" %>
                <% end %>
              </td>
            </tr>
        <% end %>
    <% end %>
    </tbody>
  </table>

</div>